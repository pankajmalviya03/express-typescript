{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths":{}
  },
  "exclude": ["node_modules","dist"],
  "include": [ "src"],
  "types": ["src/types"]
}
